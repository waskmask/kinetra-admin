<div
  class="flex-shrink-0 p-3 main-sidebar"
 
  bis_skin_checked="1"
>
  <div class="header">
    <a
      href="/dashboard"
      class="d-flex align-items-center pb-3 mb-3 link-dark text-decoration-none border-bottom"
    >
      <img src="/public/images/logo.svg" alt="Logo" />
    </a>
  </div>
  <ul class="list-unstyled ps-0 sidebar-menu">
    <li class="mb-1">
      <button class="btn align-items-center rounded btn-link" <%= path === '/dashboard' ? '' : 'onclick="todashboard()"' %>>
        <i class="bi bi-house-door me-3"></i><%-__('dashboard')%>
      </button>
    </li>
    <li class="mb-1">
      <button
        class="btn btn-toggle align-items-center rounded collapsed"
        data-bs-toggle="collapse"
        data-bs-target="#products-collapse"
        aria-expanded="false"
      >
        <i class="bi bi-box me-3"></i><%-__('products_and_commodities')%>
      </button>
      <div class="collapse <%= path === '/products' ? 'show' : '' %>" id="products-collapse" bis_skin_checked="1">
        <ul class="btn-toggle-nav fw-normal pb-1 small">
          <% if (user && (user.role === 'admin' || user.role === 'superadmin')) { %>
          <li><a href="<%= pagePath === '/add-products' ? '#' : '/add-products' %>" class="rounded <%= pagePath === '/add-products' ? 'active' : '' %>"><%-__('add_new_products')%></a></li>
          <% } %>
          <li><a href="<%= pagePath === '/all-products' ? '#' : '/products' %>" class="rounded <%= pagePath === '/all-products' ? 'active' : '' %>"><%-__('view_products')%></a></li> 
        </ul>
      </div>
    </li>
    <li class="mb-1">
      <button
        class="btn btn-toggle align-items-center rounded collapsed"
        data-bs-toggle="collapse"
        data-bs-target="#inventory-collapse"
        aria-expanded="false"
      >
        <i class="bi bi-clipboard-data me-3"></i><%-__('inventory')%>   
      </button>
      <div class="collapse <%= path === '/inventory' ? 'show' : '' %>" id="inventory-collapse" bis_skin_checked="1">
        <ul class="btn-toggle-nav fw-normal pb-1 small">
          <% if (user && (user.role === 'admin' || user.role === 'superadmin')) { %>
          <li><a href="/add-inventory" class="rounded <%= pagePath === '/add-inventory' ? 'active' : '' %>"><%-__('update_inventory')%></a></li>
          <% } %>
          <li><a href="#" class="rounded <%= pagePath === '/inventoryOverview' ? 'active' : '' %>"><%-__('view_inventory')%></a></li> 
        </ul>
      </div>
    </li>

    <li class="mb-1">
      <button
        class="btn btn-toggle align-items-center rounded collapsed"
        data-bs-toggle="collapse"
        data-bs-target="#customer-collapse"
        aria-expanded="false"
      >
        <i class="bi bi-person-badge me-3"></i> <%-__('customers')%> 
      </button>
      <div class="collapse <%= path === '/customers' ? 'show' : '' %>" id="customer-collapse" bis_skin_checked="1">
        <ul class="btn-toggle-nav fw-normal pb-1 small">
          <% if (user && (user.role === 'admin' || user.role === 'superadmin')) { %>
            <li>
              <a 
                href="<%= pagePath === '/add-customer' ? 'javascript:void(0)' : '/add-new-customer' %>"
                class="rounded <%= pagePath === '/add-customer' ? 'active' : '' %>">
                <%-__('add_new_customer')%></a>
            </li> 
          <% } %>
          <li><a href="<%= pagePath === '/customers' ? 'javascript:void(0)' : '/customers' %>" 
            class="rounded <%= pagePath === '/customers' ? 'active' : '' %>"><%-__('view_customers')%></a></li> 
        </ul>
      </div>
    </li>

    <li class="mb-1">
      <button
        class="btn btn-toggle align-items-center rounded collapsed"
        data-bs-toggle="collapse"
        data-bs-target="#offers-collapse"
        aria-expanded="false"
      >
      <i class="bi bi-list-task me-3"></i> <%-__('offers_and_orders')%>
      </button>
      <div class="collapse " id="offers-collapse" bis_skin_checked="1">
        <ul class="btn-toggle-nav fw-normal pb-1 small">
          <li><a href="#" class="rounded"><%-__('create_new_offer')%></a></li> 
          <li><a href="#" class="rounded"><%-__('view_offers')%></a></li> 
          <li><a href="#" class="rounded"><%-__('view_orders')%></a></li> 
        </ul>
      </div>
    </li>

    <li class="mb-1">
      <button
        class="btn btn-toggle align-items-center rounded collapsed"
        data-bs-toggle="collapse"
        data-bs-target="#invoices-collapse"
        aria-expanded="false"
      >
      <i class="bi bi-receipt me-3"></i><%-__('invoice_and_document')%> 
      </button>
      <div class="collapse " id="invoices-collapse" bis_skin_checked="1">
        <ul class="btn-toggle-nav fw-normal pb-1 small">
          <li><a href="#" class="rounded"><%-__('create_new_invoice')%></a></li> 
          <li><a href="#" class="rounded"><%-__('view_invoices')%></a></li> 
          <li><a href="#" class="rounded"><%-__('add_expense_invoice')%></a></li> 
        </ul>
      </div>
    </li>

    <li class="mb-1">
      <button
        class="btn btn-toggle align-items-center rounded collapsed"
        data-bs-toggle="collapse"
        data-bs-target="#delivery-collapse"
        aria-expanded="false"
      >
      <i class="bi bi-truck me-3"></i> <%-__('delivery_and_fulfillment')%>
      </button>
      <div class="collapse <%= path === '/storage' ? 'show' : '' %>" id="delivery-collapse" bis_skin_checked="1">
        <ul class="btn-toggle-nav fw-normal pb-1 small">
          <li><a href="/storages" class="rounded <%= path === '/storage' ? 'active' : '' %>"><%-__('storage')%></a></li> 
          <li><a href="#" class="rounded"><%-__('waybills')%></a></li> 
          <li><a href="#" class="rounded"><%-__('storage_members')%></a></li> 
        </ul>
      </div>
    </li>
    <% if (user && (user.role === 'admin' || user.role === 'superadmin')) { %>
    <li class="mb-1">
      <button
        class="btn btn-toggle align-items-center rounded collapsed"
        data-bs-toggle="collapse"
        data-bs-target="#users-collapse"
        aria-expanded="false"
      >
      <i class="bi bi-person-circle me-3"></i><%-__('user_managment')%> 
      </button>
      <div class="collapse <%= path === '/admin-users' ? 'show' : '' %>" id="users-collapse" bis_skin_checked="1">
        <ul class="btn-toggle-nav fw-normal pb-1 small">
          <li><a href="<%= pagePath === '/add-admin-users' ? '#' : '/add-admin-users' %>" class="rounded <%= pagePath === '/add-admin-users' ? 'active' : '' %>"><%-__('add_new_user')%></a></li> 
          <li><a href="<%= pagePath === '/admin-users' ? '#' : '/admin-users' %>" class="rounded <%= pagePath === '/admin-users' ? 'active' : '' %>"><%-__('all_users')%></a></li>  
        </ul>
      </div>
    </li>
    <% } %>
  </ul>  
</div>
